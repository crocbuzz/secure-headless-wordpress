{
    "repositories": [
      {
        "type": "composer",
        "url": "https://wpackagist.org"
      }
    ],
    "require": {
      "php": ">=7.0",
      "vlucas/phpdotenv": "^5.2.0",
      "johnpbloch/wordpress": "5.6.0",
      "composer/installers": "~1.0",
      "wpackagist-plugin/wp-graphql": "*",
      "wpackagist-plugin/advanced-custom-fields": "*",
      "wpackagist-plugin/headless-mode": "*",
      "wpackagist-plugin/notification": "*",
      "wpackagist-plugin/wp-gatsby": "*",
      "wpackagist-plugin/classic-editor": "*",
      "wpackagist-plugin/woocommerce": "*",
      "wpackagist-plugin/woocommerce-gateway-stripe": "*"
    },
    "extra": {
      "wordpress-install-dir": "wp"
    },
    "scripts": {
      "post-install-cmd": [
        "php -r \"copy('wp-config.sample.php', 'wp/wp-config.php');\"",
        "cp -R wp-content/* wp/wp-content",
        "rm -rf wp-content"
      ]
    }
}